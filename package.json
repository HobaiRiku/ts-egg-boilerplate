{
  "name": "ts-egg-boilerplate-mongoose",
  "version": "0.0.1",
  "description": "ts写egg+mongoose应用框架模版",
  "scripts": {
    "start": "egg-scripts start --port=9001 --daemon --title=my-ts-egg-mongoose-app",
    "dev": "egg-bin dev -r 'egg-ts-helper/register'",
    "tsc": "ets && tsc -p tsconfig.json",
    "clean": "ets clean",
    "stop": "egg-scripts stop --title=my-ts-egg-mongoose-app",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "tslint .",
    "ci": "npm run lint && npm run cov",
    "debug": "egg-bin debug"
  },
  "egg": {
    "typescript": true
  },
  "dependencies": {
    "egg": "^2.12.0",
    "egg-cors": "^2.1.1",
    "egg-mock": "^3.15.0",
    "egg-mongoose": "^3.1.1",
    "egg-scripts": "^2.10.0",
    "egg-socket.io": "^4.1.5",
    "jsonwebtoken": "^8.3.0",
    "md5": "^2.2.1",
    "moment": "^2.22.2",
    "request": "^2.88.0",
    "request-promise-any": "^1.0.5",
    "source-map-support": "^0.5.9",
    "tslib": "^1.9.3",
    "typescript": "^3.1.6",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/mockjs": "^1.0.0",
    "@types/mongoose": "^5.3.1",
    "@types/node": "^10.12.2",
    "@types/power-assert": "^1.4.29",
    "@types/request": "^2.48.1",
    "@types/socket.io": "^2.1.0",
    "@types/supertest": "^2.0.6",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.0.1",
    "egg-bin": "^4.9.0",
    "egg-ts-helper": "^1.13.0",
    "mocha": "^5.2.0",
    "trash-cli": "^1.4.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  },
  "author": "HobaiRiku<me@hobairiku.site>",
  "license": "MIT"
}
